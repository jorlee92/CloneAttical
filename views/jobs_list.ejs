<% include header %>
    <br />
    <div class="text-center">
    <% if (jobs.length > 0) { %>
      <h1>Matching Jobs:</h1>
      <% } %>
        <% if (jobs.length < 1){ %>
        <h1 class="alert alert-warning"> Error: Could not find any matching jobs!</h1>
        <% } %>
    </div>
    <br />
    </div>
    <br />
    <br />

    <% if (jobs.length > 0){ %>
    <div class="container">
      <div class="row">
      <table class="table table-hover">
    <thead>
      <tr>
        <th>Job Title</th>
        <th>Company</th>
        <th>More info</th>
      </tr>
    </thead>
    <tbody>
        <% jobs.forEach(function (job) { %>
            <tr>
                <td><%= job.jobTitle %></td>
                <td><%= job.company.name %></td>
                <td><a href="/jobs/view/<%= job["_id"] %>"><button class="btn btn-info">More info</button></a></td>
            </tr>
          <% }) %>
        </tbody>
    </table>
      </div>
      <% } %>
    </div>
    <br />
    <br />
    <% include footer %>

</body>

</html>